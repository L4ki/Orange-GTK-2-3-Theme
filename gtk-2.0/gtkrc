# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:white\nbase_color:#383c4a"
# Foreground/background
gtk-color-scheme = "fg_color:#eeeeec\nbg_color:#2e313d"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#ffffff\nselected_bg_color:#ffaa7f"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#919494\ninsensitive_bg_color:#383c4a"
# Menus
gtk-color-scheme = "menu_color:#4f5468"
# Links
gtk-color-scheme = "link_color:#006A80\nvisited_link_color:#006A80"
# Treeview headers
gtk-color-scheme = "column_header_color:#585e74\nhover_column_header_color:#6c748f"
# Window decoration
gtk-color-scheme = "window_color:#383c4a"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#ffffff\ntooltip_bg_color:#ffaa7f"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "hacks-dark.rc"
